---
import Head from '../../components/Head.astro';
import { getCollection } from 'astro:content';
import NavigateButton from '../../NavigateButton';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
        <Head />
		<style>
			body {
				height: 100vh;
				background-color: gainsboro;
			}
			main {
				border-radius: 5px;
				padding-top: 1rem;
				padding-left: 1rem;
				width: 100%;
				height: 100%;
			}

			blog-title {
				margin: 1rem;
				color: black;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				width: 90%;
				place-content: center;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				transform: skew(5deg);
				width: fit-content;
				padding: 0 .5rem;
				background-color: black;
				padding: 1rem;
				box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
				margin: 0 1rem;
				animation: 2s ease-in slide-in;
			}
			@keyframes slide-in {
				from {
					translate: 150vw 0;
				}

				to {
					translate: 0 0;
				}
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				max-width: 100%;
			}
			ul li a {
				display: block;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<NavigateButton route="/" left />
		<main>
			<h1 class="blog-title">Blog</h1>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img src={post.data.heroImage} alt="No image" />
									<h4 class="title">{post.data.title}</h4>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
	</body>
</html>
