---
import type { CollectionEntry } from 'astro:content';
import Head from '../components/Head.astro';
import NavigateButton from '../NavigateButton';

type Props = CollectionEntry<'blog'>['data'];

const { title, heroImage } = Astro.props;
---

<html lang="en">
	<head>
        <Head />
		<style>
			main {
				padding-top: 1rem;
				max-width: 100%;
				margin: 0;
			}
            .article {
                display: flex;
                flex-direction: column;
                align-items: center;
                padding: 0 .5rem;
            }
			.hero-image img {
				display: block;
				border-radius: 12px;
                max-width: 100%;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<NavigateButton route="/blog" left />
		<main>
			<article class="article">
				<div class="hero-image">
					{heroImage && <img src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
	</body>
</html>
